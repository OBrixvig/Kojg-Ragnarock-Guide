@page
@model IndexModel
@{
    ViewData["Title"] = "Udstillinger";
}

<div class="scroll-parent">
    <div class="scroll-child">
        <div id="FrontPageCarousel" class="carousel slide">
            <div class="carousel-indicators">
                @for (int i = 0; i < 4; i++)
                {
                    if (i == 0)
                    {
                        <button type="button" data-bs-target="#FrontPageCarousel" data-bs-slide-to="0" class="active" aria-current="true"></button>

                    }
                    else
                    {
                        <button type="button" data-bs-target="#FrontPageCarousel" data-bs-slide-to="@i"></button>
                    }
                }
            </div>
            <div class="carousel-inner">

                @for (int i = 0; i < 4; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active c-item">
                            <img src="/exhibitionPhotos/@Model.Exhibitions[i].PhotoFileName" class="d-block w-100 c-img" alt="3">
                            <div class="carousel-caption">
                                <h1>@Model.Exhibitions[i].Title</h1>
                                <p>@Model.Exhibitions[i].Description</p>
                                <a class="btn btn-primary" role="button" asp-page="/Exhibitions/Index">Se Udstilling</a>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="carousel-item c-item">
                            <img src="/exhibitionPhotos/@Model.Exhibitions[i].PhotoFileName" class="d-block w-100 c-img" alt="3">
                            <div class="carousel-caption">
                                <h1>@Model.Exhibitions[i].Title</h1>
                                <p>@Model.Exhibitions[i].Description</p>
                                <a class="btn btn-primary" role="button" asp-page="/Exhibitions/Index">Se Udstilling</a>
                            </div>
                        </div>

                    }
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#FrontPageCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#FrontPageCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="scroll-child">
