@page
@model Kojg_Ragnarock_Guide.Pages.Exhibitions.Etage2Model
@{
}
<div class="container">

    <h1>Etage 2</h1>
    <div class="udstilling-grid">
        <div class="udstilling">
            <ul class="list-group list-group-flush">
                @foreach (var exhibition in Model.Exhibitions)
                {
                    if (exhibition.Floor == "2")
                    {
                        <div class="Episode">

                            <article class="EpisodeIdTitle">
                                <p class="EpisodeId">@exhibition.Id-</p>   <p class="EpisodeTitle">@exhibition.Title></p>
                            </article>
                            <hr class="EpisodeTop-Line">

                            <img class="EpisodePicture" src="/exhibitionPhotos/@exhibition.PhotoFileName" width="50" alt="Du har ikke tilføjet et billede" />

                            <p class="EpisodeDescription">@exhibition.Description</p>

                            <audio controls class="EpisodeSoundFile">
                                <source src="/exhibitionAudios/@exhibition.AudioFileName" type="audio/ogg">
                            </audio>
                        </div>
                    }
                }

            </ul>
        </div>
        <div class="fixedEtage">
            <td><img src="/Plantegninger/Etage2.jpg" alt="Du har ikke tilføjet et billed" /></td>
        </div>
    </div>
</div>
                </div>