@page
@model Kojg_Ragnarock_Guide.Pages.Exhibitions.IndexModel
@{
}

@*Må ikke slette denne div*@
<div class="container">
    <h2 class="text-center mb-5">Listen med alle udstillinger</h2>

    <div class="row mb-5">
        <div class="col">
            <a class='btn btn-primary' href="/Admin/CreateExhibition">Opret nyt</a>
        </div>
        <div class="col">
        </div>
    </div>

<table Class="table">
    <tr>
        <th>Exhibidition ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Floor</th>
        <th>Photo</th>
       
    </tr>
    @foreach (Models.Exhibition exhibitions in Model.Exhibitions)
    {
       <tr>
            <td>@exhibitions.ExhibitionId</td>
            <td>@exhibitions.Title</td>
            <td>@exhibitions.Floor</td>
            <td>@exhibitions.Description</td>
            <td><img scr="/exhibitions/@exhibitions.PhotoFile" width="200" /></td>
                                                                       
            
       </tr> 
    }
</table>