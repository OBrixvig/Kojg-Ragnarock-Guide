@page
@model Kojg_Ragnarock_Guide.Pages.Admin.EditExhibitionModel
@{
}

@*Må ikke slette denne div*@
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <h2 class="text-center mb-5">Updater udstilling</h2>
            @if (Model._errorMessage.Length > 0)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>@Model._errorMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            }
            else if (Model._successMessage.Length > 0)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model._successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            }

            <form method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Udstillings Nummer</label>
                    <div class="col-sm-8">
                        <input readonly class="form-control-plaintext" value="@Model.Exhibition.Id">
                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Titel</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ExhibitionDto.Title">
                        <span asp-validation-for="ExhibitionDto.Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Beskrivelse</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" asp-for="ExhibitionDto.Description"></textarea>
                        <span asp-validation-for="ExhibitionDto.Description" class="text-danger"></span>

                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Etage</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="ExhibitionDto.Floor">
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <img src="/exhibitionPhotos/@Model.Exhibition.PhotoFileName" width="150" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Billed Fil</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ExhibitionDto.PhotoFile">
                        <span asp-validation-for="ExhibitionDto.PhotoFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button type="submit" class="btn btn-primary">Opdater udstilling</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a class="btn btn_outline-primary" href="/Exhibitions/Index" role="button">Fortryd</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>