@page
@model Kojg_Ragnarock_Guide.Pages.Admin.CreateExhibitionModel
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Ny Udstilling</h2>

        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class=" col-sm-4 col-form-label">Titel</label>
                <div class="col-sm-8"> 
                    <input class="form-control" asp-for="exhibitionDto.Title"> 
                    <span asp-validation-for="exhibitionDto.Title" class="text-danger"></span>

                </div>
            </div>
        
            <div class="row mb-3">
                <label class=" col-sm-4 col-form-label">Beskrivelse</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="exhibitionDto.Description"></textarea>
                    <span asp-validation-for="exhibitionDto.Description" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class=" col-sm-4 col-form-label">Etage</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="exhibitionDto.Floor"> 
                    <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class=" col-sm-4 col-form-label">Billed Fil</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="exhibitionDto.PhotoFile">
                    <span asp-validation-for="exhibitionDto.PhotoFile" class="text-danger"></span>
                </div>
             </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Lyd Fil</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="exhibitionDto.AudioFile">
                        <span asp-validation-for="exhibitionDto.AudioFile" class="text-danger"></span>
                    </div>
            </div>

                    <div class="row mb-3">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">Tilføj udstilling</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                         <a class="btn btn_outline-primary" href="/Exhibitions/Index" role="button">Fortryd</a>
                        </div>
                    </div>
        </form> 
    </div>
</div>